#!/usr/bin/python3
"""
Module for adding two numbers.
"""


def add_integer(a, b=98):
    """
    Adds two numbers (a and b).

    Args:
        a (int or float): First number.
        b (int or float, optional): Second number, defaults to 98.

    Raises:
        TypeError: If `a` or `b` is not an int or float.

    Returns:
        int: Sum of `a` and `b` as integers.
    """
    if not isinstance(a, (int, float)):  # Check if `a` is valid
        raise TypeError("a must be an integer")
    if not isinstance(b, (int, float)):  # Check if `b` is valid
        raise TypeError("b must be an integer")
    return int(a) + int(b)
